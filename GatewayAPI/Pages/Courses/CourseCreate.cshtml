@page
@model GatewayAPI.Pages.Courses.CourseCreateModel
@{
    ViewData["Title"] = "Создать курс";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <form method="post">
        <div class="form-group mb-3">
            <label asp-for="Course.Title" class="control-label"></label>
            <input asp-for="Course.Title" class="form-control" />
            <span asp-validation-for="Course.Title" class="text-danger"></span>
        </div>
        
        <div class="form-group mb-3">
            <label asp-for="Course.Description" class="control-label"></label>
            <textarea asp-for="Course.Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Course.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Создать" class="btn btn-primary" />
            <a asp-page="/Index" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}