@page
@model GatewayAPI.Pages.Courses.CourseCreateModel
@{
    ViewData["Title"] = "Создать курс";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/site.css" rel="stylesheet" asp-append-version="true">
    <link href="/css/course_creation.css" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<div class="course-creation-container">
    <div class="creation-header">
        <h1 class="creation-title">@ViewData["Title"]</h1>
        <p class="creation-subtitle">Заполните основные данные о новом курсе</p>
    </div>

    <form method="post" class="creation-form">
        <div class="form-section">
            <div class="form-group">
                <label class="form-label">
                    Название курса
                    <span class="required-mark">*</span>
                </label>
                <input id="title" name="title" asp-for="Course.Title" class="form-input"
                       placeholder="Введите название курса (от 5 до 100 символов)" />
                <span asp-validation-for="Course.Title" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Course.Description" class="form-label">
                    Описание курса
                    <span class="required-mark">*</span>
                </label>
                <textarea id="description" name="description" asp-for="Course.Description" class="form-textarea"
                          rows="5" placeholder="Опишите содержание курса, чему научатся студенты"></textarea>
                <span asp-validation-for="Course.Description" class="validation-message"></span>
                <div class="hint-text">Минимум 50 символов. Можно использовать Markdown.</div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="submit-button">
                <i class="fas fa-plus-circle"></i> Создать курс
            </button>
            <a asp-page="/Index" class="cancel-button">
                <i class="fas fa-times"></i> Отмена
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}